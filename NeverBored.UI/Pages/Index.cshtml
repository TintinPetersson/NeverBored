@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    @Model.Activity.Activity
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">People needed: @Model.Activity.Participants</li>
                    <li class="list-group-item">Type of activity: @Model.Activity.Type</li>
                </ul>
            </div>
            <button class="btn btn-light pt-2 mt-2" style="width:150px" onClick="window.location.reload();">Refresh</button>
            <form method="post">
                <input hidden asp-for="@Model.Activity.Key" name="id" />
                <input class="btn btn-light pt-2 mt-2" style="width: 150px" type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>


<div class="container mt-3 pt-3">
    @if (Model.ActivityFavorties != null)
    {
        <div class="row justify-content-center">
            @foreach (var activity in Model.ActivityFavorties)
            {
                <div class="col-3">
                    <p class="text-light">@activity.Activity</p>
                    <form method="post">
                        <input asp-page-handler="Delete" id="key" type="submit" value="Delete" asp-route-key="@activity.Key" />
                    </form>
                </div>
            }
        </div>
    }
</div>

